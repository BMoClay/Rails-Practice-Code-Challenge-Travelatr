<h3> Edit Post </h3>

    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <%= error %><br>
        <% end %>
    <% end %>
    <br>

<%= form_for @post do |f| %>
      <%= f.label :title %><br>
      <%= f.text_field :title %><br>
      <%= f.label :blogger %><br>
      <%= f.collection_select :blogger_id, Blogger.all, :id, :name, prompt: true %><br>
      <%= f.label :destination %><br>
      <%= f.collection_select :destination_id, Destination.all, :id, :name, prompt: true %><br>
      <%= f.label :content %><br>
      <%= f.text_area :content %><br>
      <%= f.submit %>
    <% end %>