<h3> Make a Post </h3><br>

<ul>
    <% if @post.flash[:errors] %>
        <%= flash[:errors].each do |error| %>
            <%= error.message %><br>
        <% end %>
    </ul>
<% end %>

<% form_for @post do |f| %>
  <ul><%= f.label :title %><br>
      <%= f.text_field :title %><br>
      <%= f.label :blogger %><br>
      <%= f.collection_select (:blogger, :blogger_id, Blogger.all, :id, :name, prompt: true) %><br>
      <%= f.label :destination %><br>
      <%= f.collection_select (:destination, :destination_id, Destination.all, :id, :name, prompt: true) %><br>
      <%= f.label :content %><br>
      <%= f.text_area :content %><br>
      <%= f.submit %>
  </ul>
    <% end %>