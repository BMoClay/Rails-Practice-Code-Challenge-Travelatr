<h3> Create a New Blogger </h3><br>

    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <%= error %><br>
        <% end %>
    <% end %>
    <br>
    <br>
<%= form_for @blogger do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name %><br>
      <%= f.label :age %><br>
      <%= f.number_field :age %><br>
      <%= f.label :bio %><br>
      <%= f.text_area :bio %><br>
      <%= f.submit %>
    <% end %>